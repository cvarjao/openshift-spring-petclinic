{
    "kind": "Template",
    "apiVersion": "v1",
    "metadata": {
        "name": "petclinic",
        "creationTimestamp": null
    },
    "parameters": [
      {
        "name": "NAME_PREFIX",
        "displayName": "Name",
        "description": "The name assigned to all of the objects defined in this template.  You should keep this as default unless your know what your doing.",
        "required": true,
        "value": "petclinic"
      },{
        "name": "NAME_SUFFIX",
        "displayName": "Name",
        "description": "The suffix for all created objects",
        "required": false,
        "value": ""
      }
    ],
    "objects": [
        {
            "kind": "ImageStream",
            "apiVersion": "v1",
            "metadata": {
                "name": "${NAME_PREFIX}${NAME_SUFFIX}",
                "labels": {
                    "app": "${NAME_PREFIX}${NAME_SUFFIX}",
                    "app-prefix": "${NAME_PREFIX}",
                    "app-suffix": "${NAME_SUFFIX}"
                }
            }
        },
      {
        "kind": "BuildConfig",
        "apiVersion": "v1",
        "metadata": {
          "name": "${NAME_PREFIX}${NAME_SUFFIX}",
          "labels": {
            "app": "${NAME_PREFIX}${NAME_SUFFIX}",
            "app-prefix": "${NAME_PREFIX}",
            "app-suffix": "${NAME_SUFFIX}"
          }
        },
        "spec": {
          "triggers": [
            {
              "type": "ImageChange",
              "imageChange": {}
            },
            {
              "type": "ConfigChange"
            }
          ],
          "runPolicy": "Serial",
          "source": {
            "type": "Git",
            "git": {
              "uri": "https://github.com/spring-projects/spring-petclinic.git",
              "ref": "master"
            },
            "contextDir": "spring-petclinic"
          },
          "strategy": {
            "type": "Source",
            "sourceStrategy": {
              "from": {
                "kind": "ImageStreamTag",
                "namespace": "openshift",
                "name": "redhat-openjdk18-openshift:1.2"
              },
              "forcePull": true
            }
          },
          "output": {
            "to": {
              "kind": "ImageStreamTag",
              "name": "${NAME_PREFIX}${NAME_SUFFIX}:latest"
            }
          },
          "resources": {},
          "postCommit": {},
          "nodeSelector": null
        }
      }
    ]
}
