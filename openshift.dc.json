{
    "kind": "Template",
    "apiVersion": "v1",
    "metadata": {
        "name": "petclinic",
        "creationTimestamp": null
    },
    "parameters": [
        {
            "name": "APP_NAME",
            "displayName": "Name",
            "description": "The name assigned to all of the objects defined in this template.  You should keep this as default unless your know what your doing.",
            "required": true,
            "value": "petclinic"
        },
        {
            "name": "ENV_NAME",
            "displayName": "Name",
            "description": "The name assigned to all of the objects defined in this template.  You should keep this as default unless your know what your doing.",
            "required": true,
            "value": "petclinic"
        },
        {
            "name": "NAME_PREFIX",
            "displayName": "Name",
            "description": "The name assigned to all of the objects defined in this template.  You should keep this as default unless your know what your doing.",
            "required": true,
            "value": "petclinic"
        },{
            "name": "NAME_SUFFIX",
            "displayName": "Name",
            "description": "The suffix for all created objects",
            "required": false,
            "value": ""
        }
    ],
    "objects": [
        {
            "kind": "ImageStream",
            "apiVersion": "v1",
            "metadata": {
                "name": "${NAME_PREFIX}${NAME_SUFFIX}",
                "labels": {
                    "app-name": "${APP_NAME}",
                    "env-name": "${ENV_NAME}"
                }
            }
        },
        {
            "kind": "DeploymentConfig",
            "apiVersion": "v1",
            "metadata": {
                "name": "${NAME_PREFIX}${NAME_SUFFIX}",
                "labels": {
                    "app": "${APP_NAME}-${ENV_NAME}",
                    "app-name": "${APP_NAME}",
                    "env-name": "${ENV_NAME}"
                }
            },
            "spec": {
                "strategy": {
                    "type": "Recreate",
                    "recreateParams": {
                        "timeoutSeconds": 600
                    },
                    "resources": {},
                    "activeDeadlineSeconds": 21600
                },
                "replicas": 1,
                "test": false,
                "selector": {
                    "deploymentConfig": "${NAME_PREFIX}${NAME_SUFFIX}"
                },
                "template": {
                    "metadata": {
                        "name": "${NAME_PREFIX}${NAME_SUFFIX}",
                        "labels": {
                            "app": "${APP_NAME}-${ENV_NAME}",
                            "app-name": "${APP_NAME}",
                            "env-name": "${ENV_NAME}",
                            "deploymentConfig": "${NAME_PREFIX}${NAME_SUFFIX}"
                        }
                    },
                    "spec": {
                        "containers": [
                            {
                                "name": "${NAME_PREFIX}${NAME_SUFFIX}",
                                "image": "${DC_PROJECT}/${NAME_PREFIX}${NAME_SUFFIX}@latest",
                                "ports": [
                                    {
                                        "name": "jolokia",
                                        "containerPort": 8778,
                                        "protocol": "TCP"
                                    },
                                    {
                                        "name": "http",
                                        "containerPort": 8080,
                                        "protocol": "TCP"
                                    },
                                    {
                                        "name": "https",
                                        "containerPort": 8443,
                                        "protocol": "TCP"
                                    }
                                ],
                                "resources": {},
                                "terminationMessagePath": "/dev/termination-log",
                                "terminationMessagePolicy": "File",
                                "imagePullPolicy": "Always"
                            }
                        ],
                        "restartPolicy": "Always",
                        "terminationGracePeriodSeconds": 75,
                        "dnsPolicy": "ClusterFirst",
                        "securityContext": {},
                        "schedulerName": "default-scheduler"
                    }
                }
            }
        },
        {
            "kind": "Service",
            "apiVersion": "v1",
            "metadata": {
                "name": "${NAME_PREFIX}${NAME_SUFFIX}",
                "labels": {
                    "app": "${APP_NAME}-${ENV_NAME}",
                    "app-name": "${APP_NAME}",
                    "env-name": "${ENV_NAME}"
                },
                "annotations": {
                    "description": "The application's http port."
                }
            },
            "spec": {
                "ports": [
                    {
                        "protocol": "TCP",
                        "port": 8080,
                        "targetPort": 8080
                    }
                ],
                "selector": {
                    "deploymentConfig": "${NAME_PREFIX}${NAME_SUFFIX}"
                },
                "type": "ClusterIP",
                "sessionAffinity": "None"
            }
        },
        {
            "kind": "Route",
            "apiVersion": "v1",
            "metadata": {
                "name": "${NAME_PREFIX}${NAME_SUFFIX}",
                "labels": {
                    "app": "${APP_NAME}-${ENV_NAME}",
                    "app-name": "${APP_NAME}",
                    "env-name": "${ENV_NAME}",
                    "deploymentConfig": "${NAME_PREFIX}${NAME_SUFFIX}"
                },
                "annotations": {
                    "description": "Route for application's http service."
                }
            },
            "spec": {
                "host": "",
                "to": {
                    "kind": "Service",
                    "name": "${NAME_PREFIX}${NAME_SUFFIX}",
                    "weight": 100
                },
                "wildcardPolicy": "None"
            }
        }
    ]
}
