{
    "kind": "Template",
    "apiVersion": "v1",
    "metadata": {
        "name": "petclinic",
        "creationTimestamp": null
    },
    "parameters": [
        {
            "name": "APP_NAME",
            "displayName": "Name",
            "description": "The name assigned to all of the objects defined in this template.  You should keep this as default unless your know what your doing.",
            "required": true,
            "value": "petclinic"
        },
        {
            "name": "ENV_NAME",
            "displayName": "Name",
            "description": "The name assigned to all of the objects defined in this template.  You should keep this as default unless your know what your doing.",
            "required": true,
            "value": "petclinic"
        },
        {
            "name": "NAME_PREFIX",
            "displayName": "Name",
            "description": "The name assigned to all of the objects defined in this template.  You should keep this as default unless your know what your doing.",
            "required": true,
            "value": "petclinic"
        },{
            "name": "NAME_SUFFIX",
            "displayName": "Name",
            "description": "The suffix for all created objects",
            "required": false,
            "value": ""
        },{
            "name": "BC_PROJECT",
            "displayName": "Name",
            "description": "The suffix for all created objects",
            "required": false,
            "value": ""
        },{
            "name": "DC_PROJECT",
            "displayName": "Name",
            "description": "The suffix for all created objects",
            "required": false,
            "value": ""
        }
    ],
    "objects": [
        {
            "kind": "ImageStream",
            "apiVersion": "v1",
            "metadata": {
                "name": "${NAME_PREFIX}${NAME_SUFFIX}",
                "labels": {
                    "app-name": "${APP_NAME}",
                    "env-name": "${ENV_NAME}"
                }
            }
        },
        {
            "kind": "DeploymentConfig",
            "apiVersion": "v1",
            "metadata": {
                "name": "${NAME_PREFIX}${NAME_SUFFIX}",
                "labels": {
                    "app": "${APP_NAME}-${ENV_NAME}",
                    "app-name": "${APP_NAME}",
                    "env-name": "${ENV_NAME}"
                }
            },
            "spec": {
                "strategy": {
                    "type": "Recreate",
                    "recreateParams": {
                        "timeoutSeconds": 600
                    },
                    "resources": {},
                    "activeDeadlineSeconds": 21600
                },
                "replicas": 1,
                "test": false,
                "revisionHistoryLimit": 5,
                "selector": {
                    "deploymentConfig": "${NAME_PREFIX}${NAME_SUFFIX}"
                },
                "template": {
                    "metadata": {
                        "name": "${NAME_PREFIX}${NAME_SUFFIX}",
                        "labels": {
                            "app": "${APP_NAME}-${ENV_NAME}",
                            "app-name": "${APP_NAME}",
                            "env-name": "${ENV_NAME}",
                            "deploymentConfig": "${NAME_PREFIX}${NAME_SUFFIX}"
                        }
                    },
                    "spec": {
                        "initContainers": [
                            {
                                "name": "${NAME_PREFIX}-wait-for-db${NAME_SUFFIX}",
                                "image": "registry.access.redhat.com/rhscl/mysql-57-rhel7@sha256:7638d886370ca1eb3cefcfecf483f8dc4dc1ca05559dd521d1585ae7c4ed668e",
                                "command": [
                                    "sh",
                                    "-c",
                                    "mysql -h $DB_HOST -u $DB_USERNAME -D $MYSQL_DATABASE -e 'SELECT 1'"
                                ],
                                "env": [
                                    {
                                        "name": "$MYSQL_DATABASE",
                                        "valueFrom": {
                                            "secretKeyRef": {
                                                "key": "database-name",
                                                "name": "${NAME_PREFIX}-db${NAME_SUFFIX}"
                                            }
                                        }
                                    },
                                    {
                                        "name": "MYSQL_USER",
                                        "valueFrom": {
                                            "secretKeyRef": {
                                                "key": "database-user",
                                                "name": "${NAME_PREFIX}-db${NAME_SUFFIX}"
                                            }
                                        }
                                    },
                                    {
                                        "name": "MYSQL_PWD",
                                        "valueFrom": {
                                            "secretKeyRef": {
                                                "key": "database-password",
                                                "name": "${NAME_PREFIX}-db${NAME_SUFFIX}"
                                            }
                                        }
                                    },
                                    {
                                        "name": "DB_HOST",
                                        "value": "${NAME_PREFIX}-db${NAME_SUFFIX}"
                                    }
                                ]
                            }
                        ],
                        "containers": [
                            {
                                "name": "${NAME_PREFIX}${NAME_SUFFIX}",
                                "image": "csnr-devops-lab-tools/${NAME_PREFIX}${NAME_SUFFIX}:latest",
                                "env": [
                                    {
                                        "name": "SPRING_PROFILES_ACTIVE",
                                        "value": "production,mysql"
                                    },
                                    {
                                        "name": "DB_TYPE",
                                        "value": "mysql"
                                    },
                                    {
                                        "name": "DB_PORT",
                                        "value": "3306"
                                    },
                                    {
                                        "name": "DB_NAME",
                                        "valueFrom": {
                                            "secretKeyRef": {
                                                "key": "database-name",
                                                "name": "${NAME_PREFIX}-db${NAME_SUFFIX}"
                                            }
                                        }
                                    },
                                    {
                                        "name": "DB_USERNAME",
                                        "valueFrom": {
                                            "secretKeyRef": {
                                                "key": "database-user",
                                                "name": "${NAME_PREFIX}-db${NAME_SUFFIX}"
                                            }
                                        }
                                    },
                                    {
                                        "name": "DB_PASSWORD",
                                        "valueFrom": {
                                            "secretKeyRef": {
                                                "key": "database-password",
                                                "name": "${NAME_PREFIX}-db${NAME_SUFFIX}"
                                            }
                                        }
                                    },
                                    {
                                        "name": "DB_HOST",
                                        "value": "${NAME_PREFIX}-db${NAME_SUFFIX}"
                                    }
                                ],
                                "ports": [
                                    {
                                        "name": "jolokia",
                                        "containerPort": 8778,
                                        "protocol": "TCP"
                                    },
                                    {
                                        "name": "http",
                                        "containerPort": 8080,
                                        "protocol": "TCP"
                                    },
                                    {
                                        "name": "https",
                                        "containerPort": 8443,
                                        "protocol": "TCP"
                                    }
                                ],
                                "resources": {},
                                "terminationMessagePath": "/dev/termination-log",
                                "terminationMessagePolicy": "File",
                                "imagePullPolicy": "Always"
                            }
                        ],
                        "restartPolicy": "Always",
                        "terminationGracePeriodSeconds": 75,
                        "dnsPolicy": "ClusterFirst",
                        "securityContext": {},
                        "schedulerName": "default-scheduler"
                    }
                },
                "triggers": [
                    {
                        "imageChangeParams": {
                            "automatic": true,
                            "containerNames": [
                                "${NAME_PREFIX}${NAME_SUFFIX}"
                            ],
                            "from": {
                                "kind": "ImageStreamTag",
                                "name": "${NAME_PREFIX}${NAME_SUFFIX}:latest",
                                "namespace": "csnr-devops-lab-tools"
                            },
                            "lastTriggeredImage": "172.50.0.2:5000/csnr-devops-lab-tools/spring-petclinic-pr-1@sha256:30f884546c181e7bdb6201e6eaba268b78f01364bb989d5d78f2387b563a1d8e"
                        },
                        "type": "ImageChange"
                    },
                    {
                        "type": "ConfigChange"
                    }
                ]
            }
        },
        {
            "kind": "Service",
            "apiVersion": "v1",
            "metadata": {
                "name": "${NAME_PREFIX}${NAME_SUFFIX}",
                "labels": {
                    "app": "${APP_NAME}-${ENV_NAME}",
                    "app-name": "${APP_NAME}",
                    "env-name": "${ENV_NAME}"
                },
                "annotations": {
                    "description": "The application's http port."
                }
            },
            "spec": {
                "ports": [
                    {
                        "protocol": "TCP",
                        "port": 8080,
                        "targetPort": 8080
                    }
                ],
                "selector": {
                    "deploymentConfig": "${NAME_PREFIX}${NAME_SUFFIX}"
                },
                "type": "ClusterIP",
                "sessionAffinity": "None"
            }
        },
        {
            "kind": "Route",
            "apiVersion": "v1",
            "metadata": {
                "name": "${NAME_PREFIX}${NAME_SUFFIX}",
                "labels": {
                    "app": "${APP_NAME}-${ENV_NAME}",
                    "app-name": "${APP_NAME}",
                    "env-name": "${ENV_NAME}",
                    "deploymentConfig": "${NAME_PREFIX}${NAME_SUFFIX}"
                },
                "annotations": {
                    "description": "Route for application's http service."
                }
            },
            "spec": {
                "host": "",
                "to": {
                    "kind": "Service",
                    "name": "${NAME_PREFIX}${NAME_SUFFIX}",
                    "weight": 100
                },
                "wildcardPolicy": "None"
            }
        }
    ]
}
